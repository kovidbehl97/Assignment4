<h1>{{title}}</h1>

<table>
  <thead>
    <tr>
      <th>Product ID</th>
      <th>Title</th>
      <th>Reviews</th>
      <th>Price</th>
      <th>Category</th>
      <th>Best Seller</th>
      <th>Bought Last Month</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr class="{{#unless this.reviews}}highlighted{{/unless}}">
        <td>{{this.asin}}</td>
        <td>{{this.title}}</td>
        <td>{{noReviews this.reviews}}</td>
        <td>{{this.price}}</td>
        <td>{{this.categoryName}}</td>
        <td>{{#if this.isBestSeller}}Yes{{else}}No{{/if}}</td>
        <td>{{this.boughtInLastMonth}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
