<h1>Add New Product</h1>

<form action="/api/product" method="POST">
  <label for="asin">ASIN:</label>
  <input type="text" id="asin" name="asin" required><br>

  <label for="title">Title:</label>
  <input type="text" id="title" name="title" required><br>

  <label for="imgUrl">Image URL:</label>
  <input type="text" id="imgUrl" name="imgUrl"><br>

  <label for="stars">Stars:</label>
  <input type="number" id="stars" name="stars" min="0" max="5" step="0.1"><br>

  <label for="reviews">Reviews:</label>
  <input type="number" id="reviews" name="reviews" min="0"><br>

  <label for="price">Price:</label>
  <input type="number" id="price" name="price" min="0" step="0.01"><br>

  <label for="listPrice">List Price:</label>
  <input type="number" id="listPrice" name="listPrice" min="0" step="0.01"><br>

  <label for="categoryName">Category Name:</label>
  <input type="text" id="categoryName" name="categoryName"><br>


  <label for="boughtInLastMonth">Bought in Last Month:</label>
  <input type="number" id="boughtInLastMonth" name="boughtInLastMonth" min="0"><br>

  <button type="submit">Add Product</button>
</form>
